<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Light theme -->
  <ResourceDictionary x:Key="LightTheme">
    <Color x:Key="WindowBackgroundColor">#FFFFFFFF</Color>
    <Color x:Key="PrimaryTextColor">#FF111111</Color>
    <Color x:Key="AccentColor">#2E8B57</Color>
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <Style TargetType="Window">
      <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}" />
      <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
      <Setter Property="FontFamily" Value="Segoe UI" />
    </Style>
    <Style TargetType="Button">
      <Setter Property="Padding" Value="6,4" />
      <Setter Property="Margin" Value="4" />
      <Setter Property="Background" Value="{StaticResource AccentBrush}" />
      <Setter Property="Foreground" Value="White" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="Cursor" Value="Hand" />
    </Style>
  </ResourceDictionary>

  <!-- Dark theme (Lectura nocturna) -->
  <ResourceDictionary x:Key="DarkTheme">
    <Color x:Key="WindowBackgroundColor">#FF121212</Color>
    <Color x:Key="PrimaryTextColor">#FFEAEAEA</Color>
    <Color x:Key="AccentColor">#FFD4AF37</Color>
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <Style TargetType="Window">
      <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}" />
      <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
      <Setter Property="FontFamily" Value="Segoe UI" />
    </Style>
    <Style TargetType="Button">
      <Setter Property="Padding" Value="6,4" />
      <Setter Property="Margin" Value="4" />
      <Setter Property="Background" Value="{StaticResource AccentBrush}" />
      <Setter Property="Foreground" Value="Black" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="Cursor" Value="Hand" />
    </Style>
  </ResourceDictionary>
</ResourceDictionary>
