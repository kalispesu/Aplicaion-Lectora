<Window x:Class="LectorPdf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LectorPDF - Inicio" Height="360" Width="520" WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Bienvenido a LectorPDF" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" />

        <StackPanel Grid.Row="1" Margin="0,16,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                <Button x:Name="btnLogin" Content="Iniciar sesión" Click="btnLogin_Click" Width="120" Margin="6" />
                <Button x:Name="btnRegister" Content="Registrarse" Click="btnRegister_Click" Width="120" Margin="6" />
                <Button x:Name="btnGuest" Content="Invitado" Click="btnGuest_Click" Width="120" Margin="6" />
            </StackPanel>

            <!-- Panel de login/register dinámico -->
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="12" Width="420" HorizontalAlignment="Center">
                <StackPanel x:Name="panelAuth">
                    <!-- Los controles se crean en code-behind según la acción -->
                </StackPanel>
            </Border>

            <TextBlock x:Name="txtStatus" Foreground="Red" HorizontalAlignment="Center" Margin="0,8,0,0" />
        </StackPanel>
    </Grid>
</Window>
